{
  "manifest_version": 3,
  "name": "מארגן הסימניות המתקדם",
  "description": "כלי מתקדם לניהול וארגון סימניות בכרום עם ממשק יפה ונוח",
  "version": "2.0",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://icons.duckduckgo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "מארגן הסימניות המתקדם"
  },
  "options_page": "bookmarks.html",
  "commands": {
    "open-bookmarks": {
      "description": "פתח את מארגן הסימניות בדף מלא",
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 